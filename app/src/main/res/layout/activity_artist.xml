<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.josephbill.twentyfour.Artist">


    <Button
        android:id="@+id/newbtn"
        android:onClick="newbtn"
        android:layout_width="fill_parent"
        android:layout_height="145dp"
        android:background="@drawable/kiki"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/vid"
        android:onClick="vid"
        android:background="@drawable/videos"
        android:layout_width="fill_parent"
        android:layout_height="145dp"

        android:layout_below="@+id/newbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/music"
        android:onClick="music"
        android:layout_width="fill_parent"
        android:layout_height="145dp"
        android:background="@drawable/download"

        android:layout_below="@+id/vid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/shows"
        android:onClick="shows"
        android:layout_width="fill_parent"
        android:layout_height="145dp"
        android:text="Shows"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:background="@drawable/shows"
        android:layout_below="@+id/music"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/social"
        android:onClick="social"
        android:layout_width="fill_parent"
        android:layout_height="145dp"

        android:background="@drawable/socials"
        android:layout_below="@+id/shows"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
</ScrollView>